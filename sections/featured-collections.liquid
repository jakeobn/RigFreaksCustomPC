<link rel="stylesheet" href="{{ 'section-featured-collections.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-featured-collections.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .featured-collections {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .featured-collections__header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .featured-collections__title {
    margin: 0 0 0.5rem;
    font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    font-weight: {{ settings.heading_weight }};
    font-size: 2.5rem;
    color: {{ settings.color_text }};
  }
  
  .featured-collections__subtitle {
    margin: 0 auto;
    max-width: 700px;
    font-size: 1.1rem;
    line-height: 1.5;
    color: {{ settings.color_text_subdued }};
  }
  
  .featured-collections__grid {
    display: grid;
    gap: 2rem;
  }
  
  .featured-collections__grid--columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .featured-collections__grid--columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .featured-collections__grid--columns-4 {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .featured-collections__grid--row {
    grid-template-columns: 1fr;
    gap: 4rem;
  }
  
  .featured-collection {
    position: relative;
    display: flex;
    flex-direction: column;
    border-radius: {{ settings.card_border_radius }}px;
    overflow: hidden;
    height: 100%;
    background-color: {{ settings.color_card_background }};
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .featured-collection:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }
  
  .featured-collection__link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .featured-collection__image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 60%;
    overflow: hidden;
  }
  
  .featured-collection__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transition: transform 0.5s ease;
  }
  
  .featured-collection:hover .featured-collection__image {
    transform: scale(1.05);
  }
  
  .featured-collection__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2rem;
  }
  
  .featured-collection__title {
    margin: 0 0 0.5rem;
    font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    font-weight: {{ settings.heading_weight }};
    font-size: 1.5rem;
    color: {{ settings.color_text }};
  }
  
  .featured-collection__description {
    margin: 0 0 1.5rem;
    font-size: 1rem;
    line-height: 1.5;
    color: {{ settings.color_text_subdued }};
  }
  
  .featured-collection__button {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    margin-top: auto;
    background-color: {{ settings.color_button }};
    border: none;
    border-radius: {{ settings.button_border_radius }}px;
    color: {{ settings.color_button_text }};
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    z-index: 2;
    transition: background-color 0.2s ease, transform 0.2s ease;
    width: fit-content;
  }
  
  .featured-collection__button:hover {
    background-color: {{ settings.color_button | color_darken: 10 }};
    transform: translateY(-2px);
  }
  
  .featured-collection__button-icon {
    margin-left: 0.5rem;
  }
  
  .featured-collections__row {
    display: flex;
    align-items: center;
    margin-bottom: 4rem;
  }
  
  .featured-collections__row:nth-child(even) {
    flex-direction: row-reverse;
  }
  
  .featured-collections__row-image {
    flex: 1;
    padding-bottom: 40%;
    position: relative;
    overflow: hidden;
    border-radius: {{ settings.card_border_radius }}px;
  }
  
  .featured-collections__row-content {
    flex: 1;
    padding: 3rem;
  }
  
  .featured-collections__view-all {
    display: flex;
    justify-content: center;
    margin-top: 3rem;
  }
  
  .featured-collections__view-all-button {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2rem;
    background-color: transparent;
    border: 2px solid {{ settings.color_button }};
    border-radius: {{ settings.button_border_radius }}px;
    color: {{ settings.color_button }};
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    transition: background-color 0.2s ease, color 0.2s ease;
  }
  
  .featured-collections__view-all-button:hover {
    background-color: {{ settings.color_button }};
    color: {{ settings.color_button_text }};
  }
  
  @media screen and (max-width: 990px) {
    .featured-collections__grid--columns-4 {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .featured-collections__grid--columns-3 {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .featured-collections__row {
      flex-direction: column !important;
    }
    
    .featured-collections__row-image {
      width: 100%;
      padding-bottom: 60%;
    }
    
    .featured-collections__row-content {
      width: 100%;
      padding: 2rem 0;
    }
  }
  
  @media screen and (max-width: 750px) {
    .featured-collections__title {
      font-size: 2rem;
    }
    
    .featured-collections__grid--columns-2,
    .featured-collections__grid--columns-3,
    .featured-collections__grid--columns-4 {
      grid-template-columns: 1fr;
    }
    
    .featured-collection__content {
      padding: 1.5rem;
    }
    
    .featured-collection__title {
      font-size: 1.25rem;
    }
  }
</style>

<div class="featured-collections">
  <div class="page-width">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="featured-collections__header">
        {% if section.settings.title != blank %}
          <h2 class="featured-collections__title">{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <div class="featured-collections__subtitle">{{ section.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}
    
    {% if section.settings.layout == 'grid' %}
      <div class="featured-collections__grid featured-collections__grid--columns-{{ section.settings.products_per_row }}">
        {%- for block in section.blocks -%}
          {% liquid
            assign collection = collections[block.settings.collection]
            assign image = block.settings.image
            if image == blank and collection != blank and collection.image != blank
              assign image = collection.image
            elsif image == blank and collection != blank and collection.products.first != blank and collection.products.first.featured_image != blank
              assign image = collection.products.first.featured_image
            endif
          %}
          
          <div class="featured-collection" {{ block.shopify_attributes }}>
            <a href="{{ block.settings.button_link | default: collection.url }}" class="featured-collection__link" aria-label="{{ block.settings.title | default: collection.title }}"></a>
            
            <div class="featured-collection__image-wrapper">
              {%- if image != blank -%}
                <img
                  srcset="{% if image.width >= 400 %}{{ image | image_url: width: 400 }} 400w,{% endif %}
                    {% if image.width >= 800 %}{{ image | image_url: width: 800 }} 800w,{% endif %}
                    {% if image.width >= 1200 %}{{ image | image_url: width: 1200 }} 1200w,{% endif %}
                    {{ image | image_url }} {{ image.width }}w"
                  sizes="(min-width: 990px) {% if section.settings.products_per_row == 4 %}25vw{% elsif section.settings.products_per_row == 3 %}33vw{% elsif section.settings.products_per_row == 2 %}50vw{% else %}100vw{% endif %},
                    (min-width: 750px) {% if section.settings.products_per_row > 2 %}50vw{% else %}100vw{% endif %},
                    100vw"
                  src="{{ image | image_url: width: 800 }}"
                  loading="lazy"
                  alt="{{ image.alt | escape | default: block.settings.title | default: collection.title }}"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  class="featured-collection__image"
                >
              {%- else -%}
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg featured-collection__image' }}
              {%- endif -%}
            </div>
            
            <div class="featured-collection__content">
              <div>
                <h3 class="featured-collection__title">{{ block.settings.title | default: collection.title }}</h3>
                
                {% if block.settings.description != blank %}
                  <p class="featured-collection__description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
              
              {% if block.settings.button_text != blank %}
                <div class="featured-collection__button-wrapper">
                  <span class="featured-collection__button">
                    {{ block.settings.button_text }}
                    <span class="featured-collection__button-icon">{% render 'icon-arrow-right' %}</span>
                  </span>
                </div>
              {% endif %}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {% else %}
      <div class="featured-collections__grid featured-collections__grid--row">
        {%- for block in section.blocks -%}
          {% liquid
            assign collection = collections[block.settings.collection]
            assign image = block.settings.image
            if image == blank and collection != blank and collection.image != blank
              assign image = collection.image
            elsif image == blank and collection != blank and collection.products.first != blank and collection.products.first.featured_image != blank
              assign image = collection.products.first.featured_image
            endif
          %}
          
          <div class="featured-collections__row" {{ block.shopify_attributes }}>
            <div class="featured-collections__row-image">
              {%- if image != blank -%}
                <img
                  srcset="{% if image.width >= 400 %}{{ image | image_url: width: 400 }} 400w,{% endif %}
                    {% if image.width >= 800 %}{{ image | image_url: width: 800 }} 800w,{% endif %}
                    {% if image.width >= 1200 %}{{ image | image_url: width: 1200 }} 1200w,{% endif %}
                    {{ image | image_url }} {{ image.width }}w"
                  sizes="(min-width: 990px) 50vw, 100vw"
                  src="{{ image | image_url: width: 800 }}"
                  loading="lazy"
                  alt="{{ image.alt | escape | default: block.settings.title | default: collection.title }}"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                  class="featured-collection__image"
                >
              {%- else -%}
                {{ 'collection-' | append: forloop.index | placeholder_svg_tag: 'placeholder-svg featured-collection__image' }}
              {%- endif -%}
            </div>
            
            <div class="featured-collections__row-content">
              <h3 class="featured-collection__title">{{ block.settings.title | default: collection.title }}</h3>
              
              {% if block.settings.description != blank %}
                <p class="featured-collection__description">{{ block.settings.description }}</p>
              {% endif %}
              
              {% if block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link | default: collection.url }}" class="featured-collection__button">
                  {{ block.settings.button_text }}
                  <span class="featured-collection__button-icon">{% render 'icon-arrow-right' %}</span>
                </a>
              {% endif %}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {% endif %}
    
    {% if section.settings.show_view_all %}
      <div class="featured-collections__view-all">
        <a href="{{ routes.collections_url }}" class="featured-collections__view-all-button">
          {{ 'collections.general.view_all' | t }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Shop By Category"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "Explore our collections of high-performance PCs and components"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "row",
          "label": "Rows"
        }
      ],
      "default": "grid"
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Collections per row",
      "info": "Applied to grid layout only"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show view all button",
      "default": true
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Leave blank to use collection title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "View Collection"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link",
          "info": "Leave blank to use collection URL"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Leave blank to use collection image or first product image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}

