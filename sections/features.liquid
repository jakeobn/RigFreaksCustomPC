<section class="features section-padding">
  <div class="container">
    <header class="section-header">
      {% if section.settings.title != blank %}
        <h2 class="section-title">{{ section.settings.title }}</h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <div class="section-subtitle">{{ section.settings.subtitle }}</div>
      {% endif %}
    </header>
    
    <div class="features-grid features-grid--{{ section.settings.columns_desktop }}">
      {% for block in section.blocks %}
        <div class="feature-card" {{ block.shopify_attributes }}>
          <div class="feature-icon feature-icon--{{ block.settings.icon_style }}">
            {% case block.settings.icon %}
              {% when 'performance' %}
                {% render 'icon-performance' %}
              {% when 'quality' %}
                {% render 'icon-quality' %}
              {% when 'cooling' %}
                {% render 'icon-cooling' %}
              {% when 'warranty' %}
                {% render 'icon-warranty' %}
              {% when 'support' %}
                {% render 'icon-support' %}
              {% when 'shipping' %}
                {% render 'icon-shipping' %}
              {% when 'customize' %}
                {% render 'icon-customize' %}
              {% when 'rgb' %}
                {% render 'icon-rgb' %}
              {% when 'security' %}
                {% render 'icon-security' %}
              {% when 'update' %}
                {% render 'icon-update' %}
            {% endcase %}
          </div>
          
          <div class="feature-content">
            <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% if block.settings.text != blank %}
              <div class="feature-text">{{ block.settings.text }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    
    {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
      <div class="section-footer">
        <a href="{{ section.settings.cta_link }}" class="btn btn-primary">{{ section.settings.cta_text }}</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Choose RigFreaks?"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "<p>Experience the difference with our custom-built PCs</p>"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Shop All Products"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "blocks": [
    {
      "type": "feature",
