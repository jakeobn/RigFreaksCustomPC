<link rel="stylesheet" href="{{ 'section-custom-pc-builder-cta.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-custom-pc-builder-cta.css' | asset_url | stylesheet_tag }}</noscript>

<style>
  .custom-pc-builder-cta {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
    overflow: hidden;
  }
  
  .custom-pc-builder-cta__inner {
    display: flex;
    align-items: center;
    gap: 4rem;
  }
  
  .custom-pc-builder-cta__inner--image-right {
    flex-direction: row;
  }
  
  .custom-pc-builder-cta__inner--image-left {
    flex-direction: row-reverse;
  }
  
  .custom-pc-builder-cta__content {
    flex: 1;
    min-width: 0;
  }
  
  .custom-pc-builder-cta__title {
    margin: 0 0 1rem;
    font-family: {{ settings.font_heading.family }}, {{ settings.font_heading.fallback_families }};
    font-weight: {{ settings.heading_weight }};
    font-size: 2.5rem;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
    
    background: linear-gradient(to right, #ff0077, #00fffc);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 0 15px rgba(255, 0, 119, 0.3), 0 0 15px rgba(0, 255, 252, 0.3);
  }
  
  .custom-pc-builder-cta__subtitle {
    margin: 0 0 1.5rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: {{ section.settings.text_color }};
  }
  
  .custom-pc-builder-cta__description {
    margin: 0 0 2rem;
    font-size: 1.1rem;
    line-height: 1.6;
    color: {{ section.settings.text_color | color_lighten: 20 }};
    max-width: 100%;
  }
  
  .custom-pc-builder-cta__buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }
  
  .custom-pc-builder-cta__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 180px;
    padding: 1rem 2rem;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .custom-pc-builder-cta__button--primary {
    background: linear-gradient(90deg, #ff0077, #ff00e6);
    color: #ffffff;
    border: none;
    box-shadow: 0 4px 20px rgba(255, 0, 119, 0.4);
  }
  
  .custom-pc-builder-cta__button--primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 0, 119, 0.5);
  }
  
  .custom-pc-builder-cta__button--secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }
  
  .custom-pc-builder-cta__button--secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-2px);
  }
  
  .custom-pc-builder-cta__media {
    flex: 1;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .custom-pc-builder-cta__image-wrapper {
    width: 100%;
    max-width: 500px;
    aspect-ratio: 1 / 1;
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
    
    /* Glow effect */
    &::before {
      content: '';
      position: absolute;
      top: -20px;
      left: -20px;
      right: -20px;
      bottom: -20px;
      background: radial-gradient(circle at center, rgba(255, 0, 119, 0.4) 0%, rgba(0, 255, 252, 0.4) 100%);
      z-index: -1;
      filter: blur(30px);
      opacity: 0.6;
    }
  }
  
  .custom-pc-builder-cta__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  /* Animation for the image */
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  
  .custom-pc-builder-cta__image-wrapper {
    animation: float 6s ease-in-out infinite;
  }
  
  @media screen and (max-width: 990px) {
    .custom-pc-builder-cta__inner {
      flex-direction: column;
      gap: 3rem;
    }
    
    .custom-pc-builder-cta__title {
      font-size: 2rem;
    }
    
    .custom-pc-builder-cta__subtitle {
      font-size: 1.15rem;
    }
    
    .custom-pc-builder-cta__description {
      font-size: 1rem;
    }
    
    .custom-pc-builder-cta__media {
      width: 100%;
    }
    
    .custom-pc-builder-cta__image-wrapper {
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }
  }
  
  @media screen and (max-width: 750px) {
    .custom-pc-builder-cta__title {
      font-size: 1.75rem;
    }
    
    .custom-pc-builder-cta__buttons {
      flex-direction: column;
    }
    
    .custom-pc-builder-cta__button {
      width: 100%;
    }
  }
</style>

<div class="custom-pc-builder-cta">
  <div class="page-width">
    <div class="custom-pc-builder-cta__inner custom-pc-builder-cta__inner--image-{{ section.settings.image_position }}">
      <div class="custom-pc-builder-cta__content">
        {%- if section.settings.title != blank -%}
          <h2 class="custom-pc-builder-cta__title">{{ section.settings.title }}</h2>
        {%- endif -%}
        
        {%- if section.settings.subtitle != blank -%}
          <div class="custom-pc-builder-cta__subtitle">{{ section.settings.subtitle }}</div>
        {%- endif -%}
        
        {%- if section.settings.description != blank -%}
          <div class="custom-pc-builder-cta__description">{{ section.settings.description }}</div>
        {%- endif -%}
        
        <div class="custom-pc-builder-cta__buttons">
          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="custom-pc-builder-cta__button custom-pc-builder-cta__button--primary">
              {{ section.settings.button_text }}
            </a>
          {%- endif -%}
          
          {%- if section.settings.second_button_text != blank -%}
            <a href="{{ section.settings.second_button_link }}" class="custom-pc-builder-cta__button custom-pc-builder-cta__button--secondary">
              {{ section.settings.second_button_text }}
            </a>
          {%- endif -%}
        </div>
      </div>
      
      <div class="custom-pc-builder-cta__media">
        <div class="custom-pc-builder-cta__image-wrapper">
          {%- if section.settings.image != blank -%}
            <img
              srcset="{% if section.settings.image.width >= 400 %}{{ section.settings.image | image_url: width: 400 }} 400w,{% endif %}
                {% if section.settings.image.width >= 800 %}{{ section.settings.image | image_url: width: 800 }} 800w,{% endif %}
                {% if section.settings.image.width >= 1200 %}{{ section.settings.image | image_url: width: 1200 }} 1200w,{% endif %}
                {{ section.settings.image | image_url }} {{ section.settings.image.width }}w"
              sizes="(min-width: 990px) 50vw, 100vw"
              src="{{ section.settings.image | image_url: width: 800 }}"
              loading="lazy"
              alt="{{ section.settings.image.alt | escape | default: section.settings.title }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="custom-pc-builder-cta__image"
            >
          {%- else -%}
            {{ 'computer-1' | placeholder_svg_tag: 'placeholder-svg custom-pc-builder-cta__image' }}
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>

