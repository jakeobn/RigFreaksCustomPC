{%- if section.settings.show_announcement -%}
  <div class="announcement-bar" style="background-color: {{ section.settings.background }}; color: {{ section.settings.text_color }};">
    <div class="page-width">
      <div class="announcement-bar__content text-center py-2">
        {%- if section.settings.link != blank -%}
          <a href="{{ section.settings.link }}" class="announcement-bar__link">
            <p class="announcement-bar__message text-sm font-medium">
              {{ section.settings.text | escape }}
            </p>
          </a>
        {%- else -%}
          <p class="announcement-bar__message text-sm font-medium">
            {{ section.settings.text | escape }}
          </p>
        {%- endif -%}
      </div>
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "default": true,
      "label": "Show announcement"
    },
    {
      "type": "text",
      "id": "text",
      "default": "Free shipping on all orders over $1000 | 3-year warranty included",
      "label": "Announcement text"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Announcement link"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#121212",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "background",
      "default": "#00F0FF",
      "label": "Background"
    }
  ]
}
{% endschema %}