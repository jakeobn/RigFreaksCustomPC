<div class="social-sharing flex flex-wrap gap-2" data-permalink="{{ share_url }}">
  <a 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="{{ 'general.social.alt_text.share_on_facebook' | t }}"
    href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_url }}"
    class="social-sharing__link social-sharing__link--facebook w-8 h-8 flex items-center justify-center rounded-full border border-gray-700 text-muted-foreground hover:text-white hover:bg-[#1877F2] hover:border-[#1877F2] transition-colors"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
    </svg>
  </a>

  <a 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="{{ 'general.social.alt_text.share_on_twitter' | t }}"
    href="//twitter.com/share?text={{ share_title | url_encode }}&url={{ shop.url | append: share_url }}"
    class="social-sharing__link social-sharing__link--twitter w-8 h-8 flex items-center justify-center rounded-full border border-gray-700 text-muted-foreground hover:text-white hover:bg-[#1DA1F2] hover:border-[#1DA1F2] transition-colors"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
    </svg>
  </a>

  <a 
    target="_blank" 
    rel="noopener noreferrer" 
    aria-label="{{ 'general.social.alt_text.share_on_pinterest' | t }}"
    href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_url }}&media={{ share_image | img_url: '1024x1024' }}&description={{ share_title | url_encode }}"
    class="social-sharing__link social-sharing__link--pinterest w-8 h-8 flex items-center justify-center rounded-full border border-gray-700 text-muted-foreground hover:text-white hover:bg-[#E60023] hover:border-[#E60023] transition-colors"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M8 12a4 4 0 1 1 8 0 4 4 0 0 1-8 0z"></path>
      <path d="M12 2a10 10 0 1 0 3.9 19.17 10 10 0 0 1 .1-3 10 10 0 0 1 2-2.7A9.92 9.92 0 0 0 12 2"></path>
      <path d="M15 9c.4 1.5 2 2 2 5 0 3-2 4-3.5 4S10 17 10 15c0-1.6.5-3 2-3s2 .5 2 1.5"></path>
    </svg>
  </a>

  <a 
    target="_blank" 
    rel="noopener noreferrer"
    aria-label="{{ 'general.social.alt_text.share_on_linkedin' | t }}"
    href="//www.linkedin.com/shareArticle?mini=true&url={{ shop.url | append: share_url }}&title={{ share_title | url_encode }}"
    class="social-sharing__link social-sharing__link--linkedin w-8 h-8 flex items-center justify-center rounded-full border border-gray-700 text-muted-foreground hover:text-white hover:bg-[#0077B5] hover:border-[#0077B5] transition-colors"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
      <rect x="2" y="9" width="4" height="12"></rect>
      <circle cx="4" cy="4" r="2"></circle>
    </svg>
  </a>

  <a 
    target="_blank"
    href="mailto:?subject={{ share_title | url_encode }}&body={{ shop.url | append: share_url | url_encode }}"
    class="social-sharing__link social-sharing__link--email w-8 h-8 flex items-center justify-center rounded-full border border-gray-700 text-muted-foreground hover:text-white hover:bg-primary hover:border-primary transition-colors"
    aria-label="{{ 'general.social.share_on_email' | t }}"
  >
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
      <polyline points="22,6 12,13 2,6"></polyline>
    </svg>
  </a>
</div>