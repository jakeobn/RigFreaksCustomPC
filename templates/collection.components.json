    "component-faq": {
      "type": "faq",
      "blocks": {
        "faq-0": {
          "type": "faq_item",
          "settings": {
            "question": "How do I know which components are compatible with my system?",
            "answer": "You can use our PC Builder tool to check compatibility or contact our support team for personalized recommendations. Key factors to consider include socket type for CPUs and motherboards, RAM compatibility, power requirements, and physical dimensions."
          }
        },
        "faq-1": {
          "type": "faq_item",
          "settings": {
            "question": "Do you offer installation services?",
            "answer": "Yes, we offer professional component installation services. You can add this service to your cart when purchasing components. We also offer complete system building services if you're purchasing multiple components."
          }
        },
        "faq-2": {
          "type": "faq_item",
          "settings": {
            "question": "What's your return policy for components?",
            "answer": "We offer a 30-day return policy for unopened components in their original packaging. For defective items, we offer replacements within the manufacturer's warranty period. Please note that some components may have restocking fees if returned."
          }
        },
        "faq-3": {
          "type": "faq_item",
          "settings": {
            "question": "Do you price match components?",
            "answer": "Yes, we offer price matching against major retailers. If you find a lower price on an identical item from a qualified retailer, contact us with the details, and we'll match the price if it meets our price match criteria."
          }
        }
